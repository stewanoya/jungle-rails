<section class="orders-show">
  <header class="page-header">
  <%= %>
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <h3>Here are the order details:</h3>
    <table class="table table-bordered">
      <thead>
      <tr>
      <th class="text-center" colspan='3'>Products</th>
      </tr>
        <tr>
          <th>Name</th>
          <th>Image</th>
          <th>Description</th>
          <th class="text-right">Quantity</th>
          <th class="text-right">Price</th>
        </tr>

      </thead>
      <tbody>

      <%@order.line_items.each do |item|%>
      <%# have to pass item as a local variable to the partial %>
        <%= render 'order', item: item%>
      <%end%>

      </tbody>
      <tfoot>
        <tr class="success">
          <th colspan="5">
           <h4 class="text-right"> Total: <strong><%= humanized_money_with_symbol @order.total_cents / 100.0 %> </strong> </h4>
          </th> 
            
        </tr>
        <tr class="info">
          <th colspan="5">
           <h4 class="text-right"> Email: <strong><%=  @order.email%> </strong> </h4>
          </th> 
            
        </tr>

      </tfoot>
      </table>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
